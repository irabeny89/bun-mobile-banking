{
  "name": "bun-mobile-banking",
  "version": "1.0.1",
  "description": "Mobile banking app for individuals and businesses.",
  "author": "Ernest Irabor <irabeny89@gmail.com>",
  "scripts": {
    "hook:pre-commit": "echo '#!/bin/sh\nset -e\ncog verify --file $1\n' > .git/hooks/pre-commit",
    "hook:pre-push": "echo '#!/bin/sh\nset -e\nbun run lint && bun test\n' > .git/hooks/pre-push",
    "hook:clear": "echo '' > .git/hooks/pre-commit & echo '' > .git/hooks/pre-push",
    "lint": "tsc --noEmit",
    "lint:tests": "tsc --noEmit tests/**/*.ts",
    "dev": "bun run --watch src/index.ts",
    "email": "email dev --dir src/emails",
    "tunnel": "export $(cat .env.development | xargs) && ssh -R 80:localhost:$PORT localhost.run",
    "maildev": "podman run -p 1080:1080 -p 1025:1025 maildev/maildev",
    "pod:app": "./scripts/app-pod.sh",
    "pod:app:dev": "./scripts/app-pod.sh .env.development",
    "kube:play": "./scripts/kube-play.sh",
    "kube:gen": "./scripts/pod-kube.sh",
    "garage": "podman exec fmb-storage /garage",
    "garage:status": "podman exec fmb-storage /garage status",
    "psql:dev": "export $(cat .env.development | xargs) && podman exec -ti fmb-db psql -U $POSTGRES_USER -d $POSTGRES_DB",
    "redis-cli:dev": "export $(cat .env.development | xargs) && podman exec -ti fmb-cache redis-cli"
  },
  "dependencies": {
    "@elysiajs/cors": "^1.4.0",
    "@elysiajs/openapi": "^1.4.12",
    "@elysiajs/server-timing": "^1.4.0",
    "@react-email/components": "^1.0.2",
    "bullmq": "^5.66.3",
    "elysia": "latest",
    "elysia-xss": "^1.0.3",
    "jsonwebtoken": "^9.0.3",
    "logixlysia": "^5.3.0",
    "nodemailer": "^7.0.12",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "ts-node": "^10.9.2"
  },
  "devDependencies": {
    "@react-email/preview-server": "5.0.7",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/nodemailer": "^7.0.4",
    "bun-types": "latest",
    "react-email": "^5.1.0"
  },
  "module": "src/index.js"
}