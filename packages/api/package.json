{
  "name": "moba-mobile-banking",
  "version": "1.0.1",
  "description": "Mobile banking app for individuals and businesses.",
  "author": "Ernest Irabor <irabeny89@gmail.com>",
  "scripts": {
    "githook:commit-msg": "echo '#!/bin/sh\nset -e\ncog verify --file $1' > .git/hooks/commit-msg",
    "githook:pre-push": "echo '#!/bin/sh\nset -e\nbun run lint && bun test' > .git/hooks/pre-push",
    "githooks": "bun run githook:commit-msg & bun run githook:pre-push",
    "postgithooks": "chmod +x ../../.git/hooks/commit-msg & chmod +x ../../.git/hooks/pre-push",
    "githooks:rm": "rm ../../.git/hooks/commit-msg ../../.git/hooks/pre-push",
    "lint": "tsc --noEmit",
    "lint:tests": "tsc --noEmit tests/**/*.ts",
    "dev": "bun run --watch src/index.ts",
    "email": "email dev --dir src/emails",
    "tunnel": "export $(cat .env.development | xargs) && ssh -R 80:localhost:$PORT localhost.run",
    "maildev": "podman run -p 1080:1080 -p 1025:1025 maildev/maildev",
    "mono:connect": "bun run http_requests/mono/connect/index.html",
    "pod:app": "./scripts/app-pod.sh",
    "pod:app:dev": "./scripts/app-pod.sh .env.development",
    "kube:play": "./scripts/kube-play.sh",
    "kube:gen": "./scripts/pod-kube.sh",
    "garage": "export $(cat .env.development | xargs) && podman exec $STORAGE_CONTAINER_NAME /garage",
    "garage:node-id": "bun garage status | awk 'NR==3 {print $1}'",
    "garage:status": "bun garage status",
    "garage:layout:create": "bun garage layout assign -z dc1 -c 1G $(bun garage:node-id)",
    "garage:layout:apply": "bun garage layout apply --version 1",
    "garage:layout:setup": "bun garage:layout:create && bun garage:layout:apply",
    "garage:bucket:create": "export $(cat .env.development | xargs) && bun garage bucket create ${STORAGE_BUCKET}",
    "garage:key:create": "export $(cat .env.development | xargs) && bun garage key create ${STORAGE_KEY_NAME}",
    "garage:bucket:allow": "export $(cat .env.development | xargs) && bun garage bucket allow --read --write --owner ${STORAGE_BUCKET} --key ${STORAGE_KEY_NAME}",
    "garage:bucket:setup": "bun garage:bucket:create && bun garage:key:create && bun garage:bucket:allow",
    "garage:bucket:info": "export $(cat .env.development | xargs) && bun garage bucket info ${STORAGE_BUCKET}",
    "psql:dev": "export $(cat .env.development | xargs) && podman exec -ti ${DATABASE_CONTAINER_NAME} psql -U $POSTGRES_USER -d $POSTGRES_DB",
    "redis-cli:dev": "export $(cat .env.development | xargs) && podman exec -ti ${CACHE_CONTAINER_NAME} redis-cli"
  },
  "dependencies": {
    "jsonwebtoken": "catalog:",
    "xss": "catalog:",
    "@elysiajs/cors": "catalog:backend",
    "@elysiajs/openapi": "catalog:backend",
    "@elysiajs/server-timing": "catalog:backend",
    "bullmq": "catalog:backend",
    "elysia": "catalog:backend",
    "logixlysia": "catalog:backend",
    "nodemailer": "catalog:backend"
  },
  "devDependencies": {
    "react": "catalog:frontend",
    "react-dom": "catalog:frontend",
    "ts-node": "catalog:dev",
    "@react-email/components": "catalog:dev",
    "@react-email/render": "catalog:dev",
    "@react-email/preview-server": "catalog:dev",
    "@types/jsonwebtoken": "catalog:dev",
    "@types/nodemailer": "catalog:dev",
    "@types/react": "catalog:dev",
    "react-email": "catalog:dev",
    "bun-types": "catalog:dev"
  },
  "module": "src/index.js"
}